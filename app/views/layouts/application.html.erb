<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "A Granja" %></title>
  <meta name="description" content="Um gerenciador de granjas">
  <meta name="author" content="Marcelo Pedras">
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <ul class="nav">
      <li class="divider-vertical"><%= link_to "Granjas", farms_path %></li>
      <li class="divider-vertical">
        <div class="btn-group">
          <a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">
            Galinhas
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% Farm.all.each do |f| %>
                <%= link_to "#{f.name}", farm_chickens_path(f) %>
                <br />
            <% end %>
          </ul>
        </div>
      </li>
    </ul>
  </div>
</header>
<div class="container">


  <%= yield %>

</div>

</body>
</html>