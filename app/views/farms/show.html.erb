  <%= link_to 'Editar', edit_farm_path(@farm) %> |
  <%= link_to 'Granjas', farms_path %>
    </div>
    <div class="span2 offset7">
      <%= link_to 'Gerenciar Galinhas', farm_chickens_path(@farm), :class => 'btn btn-primary' %>
    </div>
  </div>
 </div>

<%= render partial: "layouts/partials/status_production", locals: {entity:@farm}%>

